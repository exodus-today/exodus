@model Exodus.ViewModels.VM_User
@{ 
    var lang = Exodus.Global.Global.Language;
}
<div id="ex-screen-1" class="ex-navigation" data-href="@this.Url.Action("View_Navigation","Account")"></div>

<div id="ex-route-2">
    <div id="ex-screen-2" class="ex-panels ex-scroll ex-scroll_with-free-space">
        <div id="ex-profile-page-status" class="ex-panel">
            <div class="ex-panel__header">
                <i class="ex-panel__icon icons-status-outline"></i>
                @Exodus.Global.Localisation.Get("Status", lang)
                <span class="ex-panel__toggle">
                    <span class="ex-panel__show"> @Exodus.Global.Localisation.Get("Show", lang)</span>
                    <span class="ex-panel__hide"> @Exodus.Global.Localisation.Get("Hide", lang)</span>
                    <i class="ex-panel__toggle-icon"></i>
                </span>
            </div>
            <div class="ex-panel__content" data-href="@this.Url.Action("View_UserStatus","Account")"></div>
        </div>

        <div id="ex-profile-page-info" class="ex-panel">
            <div class="ex-panel__header">
                <i class="ex-panel__icon icons-info"></i>
                @Exodus.Global.Localisation.Get("Information", lang)
                <span class="ex-panel__toggle">
                    <span class="ex-panel__show"> @Exodus.Global.Localisation.Get("Show", lang)</span>
                    <span class="ex-panel__hide"> @Exodus.Global.Localisation.Get("Hide", lang)</span>
                    <i class="ex-panel__toggle-icon"></i>
                </span>
            </div>

            <div class="ex-panel__content" data-react="/User/StatusInfo?UserID=@Model.UserID&AvatarBIG=@Model.AvatarBig&UserEmail=@Model.UserEmail&UserFirstName=@Model.UserFirstName&UserLastName=@Model.UserLastName&lang=@lang" )"></div>
        </div>

        <div id="ex-profile-page-payment-react" class="ex-panel">
            <div class="ex-panel__header">
                <i class="ex-panel__icon icons-card"></i>
                @Exodus.Global.Localisation.Get("PaymentDetails", lang)
                <span class="ex-panel__toggle">
                    <span class="ex-panel__show"> @Exodus.Global.Localisation.Get("Show", lang)</span>
                    <span class="ex-panel__hide"> @Exodus.Global.Localisation.Get("Hide", lang)</span>
                    <i class="ex-panel__toggle-icon"></i>
                </span>
            </div>
            <div class="ex-panel__content" data-react="/PaymentAccount/PaymentAccountList"></div>
        </div>
    </div>
</div>